
public class Practice23 {

public static void main(String[] args) {
		
		int sum = 0;

		for (int i = 0; i <100; i++) {
			double randNum = Math.random(); //0 <= randNum < 1, 0을 포함함!
			int rn = (int)(randNum * 100) + 1;//1을 더해줘야 1~100출력 가능
			sum += rn;
			
			System.out.print(rn + "\t");
			
			if ((i+1) % 10 == 0)
				System.out.println();
		}
		
		System.out.println("난수들의 총합 : " + sum);
		System.out.println("난수들의 평균 : " + (double)sum/100);
			
	}

}
