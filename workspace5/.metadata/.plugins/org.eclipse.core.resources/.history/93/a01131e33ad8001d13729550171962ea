import java.util.Scanner;
public class Practice44 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		Average obj = new Average();
		
		int n;
		
		System.out.print("원하는 기능을 선택하세요 (1-정수, 2-실수)");
		int choice = sc.nextInt();
		if(choice == 1)
		{
			System.out.print("평균값을 원하는 정수의 개수를 입력하세요 : ");
			n = sc.nextInt();
			
			int a, b, c;
			System.out.print("1번 정수를 입력하세요 : ");
			a = sc.nextInt();
			System.out.print("2번 정수를 입력하세요 : ");
			b = sc.nextInt();
			
			if(n == 2)
			{
				System.out.println("2개의 정수의 평균은 " + obj.getAverage(a, b));
			}
			else if (n == 3)
			{
				System.out.print("3번 정수를 입력하세요 : ");
				c = sc.nextInt();
				System.out.println("3개의 정수의 평균은 " + obj.getAverage(a, b, c));
			}
		}
		else if (choice == 2)
		{
			System.out.print("평균값을 원하는 정수의 개수를 입력하세요 : ");
			n = sc.nextInt();
			
			double a, b, c;
			System.out.print("1번 정수를 입력하세요 : ");
			a = sc.nextInt();
			System.out.print("2번 정수를 입력하세요 : ");
			b = sc.nextInt();
			
			if(n == 2)
			{
				System.out.println("2개의 정수의 평균은 " + obj.getAverage(a, b));
			}
			else if (n == 3)
			{
				System.out.print("3번 정수를 입력하세요 : ");
				c = sc.nextInt();
				System.out.println("3개의 정수의 평균은 " + obj.getAverage(a, b, c));
			
		}
	}

}
